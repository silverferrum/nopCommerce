@model Nop.Plugin.Payments.PayExCheckout2.Models.ConfigurationModel
@inject Nop.Core.IWorkContext _workContext
@{
    Layout = "_ConfigurePlugin";
    string currentCurrencyCode = _workContext.WorkingCurrency.CurrencyCode;
}

@await Component.InvokeAsync("StoreScopeConfiguration")

@if (!string.Equals(currentCurrencyCode, "NOK") && !string.Equals(currentCurrencyCode, "SEK"))
{
<div class="alert alert-warning" style="margin-bottom:10px;">
    Current working currency is: @_workContext.WorkingCurrency.Name (@_workContext.WorkingCurrency.CurrencyCode)<br />
    But PayEx Checkout works only with Norwegian Krone (NOK) and Swedish Krona (SEK).<br />
    Be sure to <a href="/Admin/Currency/List">set primary store currency</a> to one of these.
</div>
}

<form asp-controller="PayExCheckout" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
